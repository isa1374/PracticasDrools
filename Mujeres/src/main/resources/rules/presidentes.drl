query BuscarPresidente(int year, String $nombre)
	President(beginY<=year, endY>=year, name == $nombre) 
end

rule "Check"
	when 
		$y : Year()
		?BuscarPresidente($y.getYear(), name;)
	then 
		System.out.println("Año: " + $y.getYear() + " Presidente: " + name);
end 



